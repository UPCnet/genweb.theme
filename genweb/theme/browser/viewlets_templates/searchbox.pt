<div id="gwsearch" i18n:domain="plone" >
  <input class="typeahead" type="text" placeholder="Search"
         tal:attributes="data-typeahead-url string:${context/absolute_url}/gw_type_ahead_search;
                         data-search-url string:${context/absolute_url}/@@search;"
         i18n:attributes="placeholder search_content"/>

         <div i18n:domain="plone" class="searchSection">
            <input id="searchbox_currentfolder_only"
                   class="noborder"
                   type="checkbox"
                   name="path"
                   tal:attributes="value view/folder_path;
                                   checked request/form/path|nothing"
                   />
            <label for="searchbox_currentfolder_only"
                   i18n:translate="label_searchbox_currentfolder_only"
                   style="cursor: pointer">
                only in current section
            </label>
        </div>
</div>
<p class="goout" tal:define="portal_url context/@@plone_portal_state/portal_url;">
	<a accesskey="5" href="#" 
		i18n:translate="submitGo" 
		i18n:domain="genweb" 
		tal:attributes="href string:${portal_url}/search">
		Cerca
	</a>
</p>
