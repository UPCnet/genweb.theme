<div class="input-append">
<!-- Aixo serà necessari quan es passi el "caller" del livesearch del portlet, al search principal
  <input class="searchField cercaCapca" type="text" placeholder="Cerca en el lloc" title="Cerca al lloc web" size="15" name="SearchableText"><button class="btn" type="button">Cerca</button>
</div> -->
  <label for="cercaCapca" class="goout">Cerca al lloc</label><input class="cercaupc span2" accesskey="4" id="cercaCapca" size="16" type="text"><button class="btn" type="button" i18n:domain="plone" i18n:translate="text_search">Cerca</button>
</div>
<p class="goout"><a accesskey="5" href="/search_form">Cerca avançada</a></p>

<tal:comment replace="nothing">
<div id="portal-searchbox"
     i18n:domain="plone"
     tal:define="navigation_root_url view/navigation_root_url;
                 search_input_id view/search_input_id;">

    <form name="searchform" id="searchGadget_form"
          action="@@search"
          tal:attributes="action string:${navigation_root_url}/@@search;
                          id string:${search_input_id}_form;">

        <div class="LSBox">
        <label class="hiddenStructure"
               tal:attributes="for search_input_id"
               i18n:translate="text_search">Search Site</label>

        <input name="SearchableText"
               type="text"
               size="18"
               value=""
               title="Search Site"
               placeholder="Search Site"
               accesskey="4"
               i18n:attributes="title title_search_site;
                                placeholder title_search_site"
               tal:attributes="value request/form/SearchableText|nothing;
                               id search_input_id"
               class="searchField" />

        <input class="searchButton"
               type="submit"
               value="Search"
               i18n:attributes="value label_search;" />

        <div class="searchSection">
            <input id="searchbox_currentfolder_only"
                   class="noborder"
                   type="checkbox"
                   name="path"
                   tal:attributes="value view/folder_path;
                                   checked request/form/path|nothing"
                   />
            <label for="searchbox_currentfolder_only"
                   i18n:translate="label_searchbox_currentfolder_only"
                   style="cursor: pointer">
                only in current section
            </label>
        </div>

        <div class="LSResult" id="LSResult" style=""><div class="LSShadow" id="LSShadow"></div></div>
        </div>
    </form>

    <div id="portal-advanced-search"
         class="hiddenStructure">
        <a href="#"
           tal:attributes="href string:${navigation_root_url}/@@search"
           i18n:translate="label_advanced_search"
           accesskey="5">
            Advanced Search&hellip;
        </a>
    </div>

</div>
</tal:comment>
