<tal:personaltools condition="not: view/anonymous">
<h1 class="goout"> Usuari </h1>
<nav id="portal-personaltools-wrapper"
     i18n:domain="genweb">
  <div class="navbar navbar-fixed-top navbar-inverse">
    <div class="navbar-inner">
      <div class="container">
        <h2 class="goout"> Menú d'usuari </h2>
        <ul class="nav">
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <img tal:attributes="src string:${view/portal_url}/++genweb++static/images/user.png"
                   alt=""
                   class="user">
              <tal:username content="view/user_name"> Rafael Ojeda Rojas </tal:username>
              <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><a tal:attributes="href string:${view/portal_url}/dashboard"
                     i18n:attributes="title genweb-preferencies">
                     <i class="icon-glass"></i>
                     <tal:dashboard i18n:translate="genweb-escriptori">
                        Dashboard</tal:dashboard>
              </a></li>
              <li><a tal:attributes="href string:${view/portal_url}/@@personal-information"
                     i18n:attributes="title genweb-perfil">
                     <i class="icon-user"></i>
                     <tal:profile i18n:translate="genweb-perfil">
                        Profile</tal:profile>
              </a></li>
              <li><a tal:attributes="href string:${view/portal_url}/@@personal-preferences"
                     i18n:attributes="title genweb-preferencies">
                     <i class="icon-cog"></i>
                     <tal:preferences i18n:translate="genweb-preferencies">
                        Preferències d'usuari</tal:preferences>
              </a></li>
              <li class="divider"></li>
              <li class="btn-menu-adjust">
                <a tal:attributes="href string:${view/portal_url}/cas_logout"
                   i18n:attributes="title genweb-logout"
                   class="btn btn-danger" href="#">
                  <i class="icon-off icon-white"></i>
                  <tal:logout i18n:translate="genweb-logout">
                        Logout</tal:logout>
                </a>
              </li>
            </ul>
          </li>
          <li><a tal:condition="view/showRootFolderLink"
                 tal:attributes="href string:${view/portal_url}/folder_contents"
                 i18n:attributes="title genweb-accesarrel">
                 <tal:rootFolder i18n:translate="genweb-accesarrel">
                    Root folder</tal:rootFolder>
          </a></li>
          <li><a tal:condition="view/canManageSite"
                 tal:attributes="href string:${view/portal_url}/@@overview-controlpanel">
                 <tal:managesite i18n:translate="Site Setup">
                    Site setup</tal:managesite>
          </a></li>
          <li><a href="https://www.upc.edu/comunicacio/www/genweb-upc/formacio" target="newwindow"
                 i18n:attributes="title genweb-ajuda">
                 <tal:help i18n:translate="genweb-ajuda">
                    Help</tal:help>
                 <img tal:attributes="alt view/assignAltAcc"
                      class="img_blank"
                      src="++genweb++static/images/blank_blanc.png">
          </a></li>
        </ul>
        <h2 class="goout"> Menú d'eines Genweb UPC </h2>
        <ul class="nav pull-right">
          <li><a class="userScreen" href="#"><span class="goout">Screen</span></a></li>
          <li><a class="userTablet" href="#"><span class="goout">Tablet</span></a></li>
          <li><a class="userMobile" href="#"><span class="goout">Mobile</span></a></li>
          <li class="divider-vertical"></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle userGenweb" data-toggle="dropdown"><span class="goout">Genweb</span> <b class="caret"></b></a>
            <ul class="dropdown-menu">
              <li class="nav-header">Genweb UPC 4.0 - JN12</li>
              <li><a href="#"><i class="icon-certificate"></i> Novetats de la versió</a></li>
              <li><a href="#"><i class="icon-certificate"></i> Darrer butlletí</a></li>
            </ul>
          </li>
        </ul>

      </div>
    </div>
  </div>
</nav>
</tal:personaltools>
