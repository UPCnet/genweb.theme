<div id="portal-breadcrumbs"
     i18n:domain="plone"
     tal:define="breadcrumbs view/breadcrumbs;
                 is_rtl view/is_rtl">
 <div class="container">
  <ul class="breadcrumb">
    <li><h2 i18n:translate="you_are_here">You are here:</h2></li>
    <li>
      <a i18n:translate="tabs_home"
         tal:attributes="href view/navigation_root_url">Home</a>
      <span tal:condition="breadcrumbs" class="divider">â–¶</span>
    </li>
    <tal:crumbs repeat="crumb breadcrumbs">
      <tal:item tal:define="is_last repeat/crumb/end;
                            url crumb/absolute_url;
                            title crumb/Title">
        <li tal:condition="not: is_last"
            tal:attributes="dir python:is_rtl and 'rtl' or 'ltr';
                            id string:breadcrumbs-${repeat/crumb/number}">
          <a href="#"
             tal:omit-tag="not: url"
             tal:attributes="href url"
             tal:content="title">
             crumb
          </a>
          <span class="divider">â–¶</span>
        </li>
        <li class="active"
            tal:condition="is_last"
            tal:content="title">
            last crumb
        </li>
      </tal:item>
    </tal:crumbs>
  </ul>
 </div>
</div>
