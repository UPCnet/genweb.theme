<div class="container">
  <div class="clearfix">
    <h1 class="pull-left">
      <a href="http://www.upc.edu" accesskey="1">
        <img tal:attributes="src string:${viewlet/portal_url}/++genweb++static/images/logoUPC.png"
             alt="Universitat Politècnica de Catalunya · BarcelonaTech">
      </a>
    </h1>
    <a class="btn btn-navbar pull-right hidden-desktop" data-toggle="collapse" data-target=".nav-collapse-eines">
      <i class="icon-wrench"></i>
    </a>
    <div class="nav-collapse nav-collapse-eines">
      <ul id="eines" class="nav nav-pills pull-right">
        <li><a accesskey="3" title="Site Map"
               i18n:translate="Site Map"
               i18n:attributes="title"
               tal:attributes="href string:${viewlet/portal_url}/@@sitemap">
               Site Map
             </a></li>
        <li><a accesskey="9" title="Contact"
               i18n:translate="Contact"
               i18n:attributes="title"
               tal:attributes="href string:${viewlet/portal_url}/contact">
               Contact
             </a></li>
        <li tal:condition="viewlet/show_directory">
            <a href="http://directori.upc.edu" target="_blank" accesskey="7">
                Directori UPC
                <img class="img_blank" src="++genweb++static/images/blank_blau.png"
                  i18n:domain="genweb"
                  i18n:attributes="alt obrir_link_finestra_nova">
            </a></li>
        <li tal:condition="viewlet/show_login">
            <a href="#loginModal" data-toggle="modal"
               i18n:domain="genweb"
               i18n:attributes="title identificat"
               i18n:translate="identificat">
               Identifica't
            </a></li>
        <tal:block replace="structure provider:genweb.language_selector_manager" />
        <li class="divider"> </li>
        <li>
          <tal:block replace="structure provider:genweb.search_manager" />
        </li>
      </ul>
    </div>
  </div>

  <div class="titol-espai clearfix">
    <h1>
      <a href="#" accesskey="2"
         tal:attributes="href string:${viewlet/portal_url}">
          <span tal:content="structure python:getattr(viewlet.genweb_config, 'html_title_%s' % viewlet.pref_lang(), 'Servei de <b>Comunicació i Promoció</b>')">
            Servei de <b>Comunicació i Promoció</b>
          </span>
          <img alt="" class="logoPropi pull-right"
               tal:attributes="src string:${viewlet/portal_url}/++genweb++static/images/logoPropi.png">
      </a>
    </h1>
  </div>

  <div class="header-image l3-image"
       tal:attributes="class string:header-image ${viewlet/get_image_class}"></div>

</div>
<div id="loginModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="loginModalLabel" aria-hidden="true"
     i18n:domain="genweb">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 id="loginModalLabel">Incia la sessió</h3>
  </div>
  <div class="modal-body">
        <p class="documentDescription">Identifiqueu-vos amb el nom d'usuari de la Intranet UPC.</p>
        <div class="accordion margin0" id="accordionLogin">

          <div class="accordion-group">
            <div class="accordion-heading box-gradient">
              <a class="accordion-toggle" href="http://cas.upc.edu"
                 tal:attributes="href context/cas_login_url | nothing">
                <strong>Entra amb la identificació única UPC
                  <img class="img_blank" src="++genweb++static/images/blank_blau.png"
                       i18n:attributes="alt obrir_link_finestra_nova">
                </strong>
             </a>
            </div>

          </div>

          <div class="accordion-group">
            <div class="accordion-heading box-gradient">
              <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordionLogin" href="#collapseLogin">
                <strong>Identifica't només a aquest web</strong>
             </a>
            </div>
            <div id="collapseLogin" class="accordion-body collapse box-gradient">
              <div class="accordion-inner">
                <form class="form-horizontal margin0">
                  <div class="control-group">
                    <label class="control-label" for="inputEmail">Nom d'usuari</label>
                    <div class="controls">
                      <input type="text" id="inputEmail" placeholder="nom.usuari">
                    </div>
                  </div>
                  <div class="control-group">
                    <label class="control-label" for="inputPassword">Contrasenya</label>
                    <div class="controls">
                      <input type="password" id="inputPassword" placeholder="contrasenya">
                    </div>
                  </div>
                  <div class="control-group margin0">
                    <div class="controls">
                      <button type="submit" class="btn btn-primary">Entra</button>
                      <h2 class="l">Heu oblidat la contrasenya?</h2>
                      <p class="s margin0">Si heu oblidat la contrasenya, cliqueu per <a href="#">recuperar-la</a></p>
                    </div>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
  </div>
  <div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">Tanca</button>
  </div>
</div>
