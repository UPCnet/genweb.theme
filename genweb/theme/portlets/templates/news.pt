<tal:newsitems tal:define="toLocalizedTime nocall:context/@@plone/toLocalizedTime;
                           plone_view context/@@plone;
                           news_items view/published_news_items;
                           data view/mostraData"
               tal:condition="news_items"
               i18n:domain="plone">

<div id="contenidor">
    <div class="portlet portlet-noticies">
        <h2>Notícies <i class="icon-news large-icon pull-right"></i></h2>
        <ul class="list-portlet">
        <li tal:repeat="obj news_items">
            <a href=""
               class="tile"
               tal:attributes="href obj/getURL;
                               title obj/Description">
                <span tal:replace="obj/pretty_title_or_id">
                Notícies RSS
                </span>
                <br/>
            </a>
            <span tal:condition="data">
            <p class="small" tal:content="python:toLocalizedTime(obj.Date)">
                May 5
            </p>
          </span>
        </li>
        </ul>
        <a href="#" class="portlet-footer"><i class="icon-rss"></i> Més notícies</a>
    </div>
</div>
</tal:newsitems>