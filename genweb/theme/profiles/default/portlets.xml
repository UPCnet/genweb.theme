<?xml version="1.0"?>
<portlets xmlns:i18n="http://xml.zope.org/namespaces/i18n"
          i18n:domain="plone">
  <!-- Removing the unwanted portlets and rename the existing ones -->
  <portlet addview="portlets.Classic" remove="True" />
  <portlet addview="portlets.Calendar" remove="True" />
  <portlet addview="plone.portlet.collection.Collection" remove="True" />
  <portlet addview="portlets.Login" remove="True" />
  <portlet addview="portlets.Navigation" remove="True" />
  <portlet addview="portlets.rss" remove="True" />
  <portlet addview="plone.portlet.static.Static" remove="True" />
  <portlet addview="collective.polls.VotePortlet" remove="True" />
  <portlet addview="genweb.portlets.homepage" remove="True" />
  <portlet addview="genweb.portlets.esdeveniments" remove="True" />
  <portlet addview="genweb.portlets.news" remove="True" />
  <portlet addview="genweb.portlets.fullnews" remove="True" />

  <portlet addview="portlets.Calendar"
           title="portlet_calendar_title"
           description="A portlet which can render a calendar."
           i18n:attributes="title;
                            description">
    <for interface="plone.app.portlets.interfaces.IColumn" />
    <for interface="plone.app.portlets.interfaces.IDashboard" />
  </portlet>

  <portlet addview="plone.portlet.collection.Collection"
           title="portlet_collection_title"
           description="A portlet which displays the results of a collection query"
           i18n:attributes="title; description"
   />

  <portlet addview="portlets.Login"
           title="portlet_login_title"
           description="A portlet which can render a log-in box"
           i18n:attributes="title;
                            description">
    <for interface="plone.app.portlets.interfaces.IColumn" />
  </portlet>

  <portlet addview="portlets.Navigation"
           title="portlet_navigation_title"
           description="A portlet which can render a navigation tree"
           i18n:attributes="title; description">
    <for interface="plone.app.portlets.interfaces.IColumn" />
  </portlet>

  <portlet addview="portlets.rss"
           title="portlet_rss_title"
           description="A portlet which can receive and render an RSS feed."
           i18n:attributes="title; description">
    <for interface="plone.app.portlets.interfaces.IColumn" />
    <for interface="plone.app.portlets.interfaces.IDashboard" />
  </portlet>

  <portlet addview="plone.portlet.static.Static"
           title="portlet_static_title"
           description="A portlet which can display static HTML text."
           i18n:attributes="title; description"
  />

  <portlet addview="collective.polls.VotePortlet"
           title="portlet_poll_title"
           description="A portlet to allow voting on a specific poll"
           i18n:attributes="title; description">
    <for interface="plone.app.portlets.interfaces.IColumn" />
    <for interface="plone.app.portlets.interfaces.IDashboard" />
  </portlet>

  <portlet addview="genweb.portlets.homepage"
           title="portlet_homepage_title"
           i18n:attributes="title"/>

  <portlet addview="genweb.portlets.esdeveniments"
           title="AgendaGW"
           i18n:attributes="title"/>

    <portlet addview="genweb.portlets.news"
             title="NoticiesPropi"
             i18n:attributes="title"/>

    <portlet addview="genweb.portlets.fullnews"
             title="FullNews"
             i18n:attributes="title"/>
</portlets>
